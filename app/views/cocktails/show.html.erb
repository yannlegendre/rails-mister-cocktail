<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do | dose |%>
    <li><%= "#{dose.description} de #{dose.ingredient.name}" %>
      <%= link_to 'X', dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<p>
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>

</p>

<%= link_to 'Back to list', cocktails_path %>
