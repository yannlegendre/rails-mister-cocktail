
<div class="banner">
  <h1>Best cocktails</h1>
</div>

<div class="container">

  <h2>Choose your cocktail</h2>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">


        <%= link_to cocktail_path(cocktail), :action => 'go' do %>
          <div class="card-custom">
            <h3><%= cocktail.name%></h3>
          </div>
        <% end %>


      </div>
    <% end %>
  </div>
</div>


