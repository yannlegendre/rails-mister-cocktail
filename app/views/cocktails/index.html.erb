
<div class="home-banner banner">
  <h1>Smooth cocktails for gentlemen</h1>
</div>

<div class="container">

  <h2>See our elegant cocktail collection 🍸</h2>
  <hr>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <%= link_to cocktail_path(cocktail), :action => 'go' do %>
          <div class="card-custom" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.5)),
         url('<%= cl_image_path cocktail.photo %>')">
            <h3><%= cocktail.name.capitalize%></h3>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <br>
  <br>

  <h2>Or make your own 👌</h2>
  <hr>
  <br>
    <div class="new-dose-container">

        <%= simple_form_for @cocktail, anchor:'form' do |f| %>
          <%= f.input :name, label: "Cocktail name" %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit class: "btn bouton_custom" %>
        <% end %>
    </div>
  </div>

</div>


